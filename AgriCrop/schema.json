{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://raw.githubusercontent.com/Ficodes/data-models/agriDataModels/specs/AgriFood/AgriCrop/schema.json",
  "title": "FIWARE - Agri Food",
  "description": "This entity contains a harmonised description of a generic crop. This entity is primarily associated with the agricultural vertical and related IoT applications.",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://fiware.github.io/data-models/common-schema.json#/definitions/GSMA-Commons"
    },
    {
      "$ref": "https://fiware.github.io/data-models/specs/AgriFood/agrifood-schema.json#/definitions/AgriFood-Commons"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": ["AgriCrop"],
          "description": "NGSI Entity Type"
        },
        "agroVocConcept": {
          "type": "string",
          "format": "uri"
        },
        "hasAgriSoil": {
          "type": "array",
          "items": [
            {
              "$ref": "https://fiware.github.io/data-models/common-schema.json#/definitions/EntityIdentifierType"
            }
          ]
        },
        "hasAgriFertiliser": {
          "type": "array",
          "items": [
            {
              "$ref": "https://fiware.github.io/data-models/common-schema.json#/definitions/EntityIdentifierType"
            }
          ]
        },
        "hasAgriPest": {
          "type": "array",
          "items": [
            {
              "$ref": "https://fiware.github.io/data-models/common-schema.json#/definitions/EntityIdentifierType"
            }
          ]
        },
        "harvestingInterval": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "values": {
                "dateRange": {
                  "type": "string",
                  "pattern": "^-[0-1][0-9]-[0-3][0-9]/-[0-1][0-9]-[0-3][0-9]$"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          ],
          "minItems": 2,
          "maxItems": 2
        },
        "plantingFrom": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "values": {
                "dateRange": {
                  "type": "string",
                  "pattern": "^-[0-1][0-9]-[0-3][0-9]/-[0-1][0-9]-[0-3][0-9]$"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          ],
          "minItems": 2,
          "maxItems": 2
        },
        "wateringFrequency": {
          "type": "string",
          "enum": [
            "daily",
            "weekly",
            "biweekly",
            "monthly",
            "onDemand",
            "other"
          ]
        }
      }
    }
  ],
  "required": ["id", "type", "name"]
}
